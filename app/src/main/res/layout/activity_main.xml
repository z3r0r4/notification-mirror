<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tVMirrorHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_mirror_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/ip_input_hint"
                android:layout_weight=".70"
                android:inputType="text"
                android:autofillHints="ip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_divider"
                android:textAlignment="center"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPort"
                android:layout_width="0dp"
                android:layout_weight=".30"
                android:layout_height="wrap_content"
                android:textAlignment="gravity"
                android:inputType="number"
                android:maxLength="5"
                android:hint="@string/input_port_hint"
                android:autofillHints="port" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.22"
                android:text="@string/btn_save_title" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvMirrorIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="@string/mirror_ip_text"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/all_divider"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMirrorPORT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/mirror_port_text"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.21" />
        </LinearLayout>

        <TextView
            android:id="@+id/tVReplyHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/address_receiver_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvReplyIP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".7"
                android:text="@string/reply_ip_text"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/all_divider"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvReplyPORT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:text="@string/reply_port_text"
                android:textAlignment="viewStart" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.21" />
        </LinearLayout>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swMirrorState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/mirror_over_network_toggle"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swSetListenerPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/listener_service_toggle"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/swRunReplyReceiverService"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/reply_receiver_service_toggle"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Button
            android:id="@+id/btnMsgTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_send_test_notification" />

        <Button
            android:id="@+id/btnReply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_reply_to_last_notification" />

        <Button
            android:id="@+id/btnAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_action_on_last_notification" />

        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_dismiss_last_notification" />

        <Button
            android:id="@+id/btnNetTest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_test_network" />

        <TextView
            android:id="@+id/tvRepliedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/replied_text" />


        <!-- @deprecated -->

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>